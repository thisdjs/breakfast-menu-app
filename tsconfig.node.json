{
  "compilerOptions": {
    "incremental": true /*save this build information, 
    rechecks and rebuilds files that have changed or are affected by changes.
    Most common for faster local development builds with Vite (was getting TSconfig err below)*/,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true
    // "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts"]
}
